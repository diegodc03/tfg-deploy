{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023", "dom"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    //"strict": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    // Asegúrate de incluir todos los archivos de tu proyecto
    "vite.config.ts"           // También puedes incluir tu archivo de configuración de Vite
  ],
  "typeRoots": [
    "node_modules/@types",     // Asegúrate de que se incluyan los tipos de tus dependencias
    "node_modules/@mui/types"  // Esto es si instalas los tipos de MUI
  ]
}
